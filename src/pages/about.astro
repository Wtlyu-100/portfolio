---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
---

<style>
  /* --- 全局布局覆盖 --- */
  .page-layout-override {
    /* 1. 页面底色：深灰 (Sidebar 和背景) */
  
    color: #e0e0e0 !important;
    
    /* 布局设置 */
    max-width: 1200px !important;
    margin: 0 auto;
    width: 100%;
    padding: 0 2rem;
    min-height: 100vh;
  }

  /* 确保标题继承默认字体 */
  .page-layout-override h1, 
  .page-layout-override h2, 
  .page-layout-override h3 {
    font-family: inherit !important;
  }

  .about-container {
    display: grid;
    /* 左侧 240px，右侧自适应 */
    grid-template-columns: 240px 1fr;
    gap: 4rem;
    padding-top: 3rem;
    align-items: start;
  }

  /* 左侧边栏 */
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    position: sticky;
    top: 3rem;
  }

  /* 头像样式 */
  .portrait {
    width: 100%; 
    aspect-ratio: 1 / 1; 
    object-fit: cover;
    background-color: #222; 
    margin-bottom: 0.5rem;
    border-radius: 0; /* 直角 */
  }

  /* 左侧信息列表 */
  .info-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* 左侧小标题：匹配 .notes-kicker 风格 */
  .info-item dt {
    font-weight: 400; /* 保持轻盈 */
    text-transform: uppercase;
    
    /* 【匹配】使用了截图中的 0.18em 间距 */
    letter-spacing: 0.18em; 
    
    /* 字体大小微调：18px在侧边栏可能过大，这里设为 12px 保持精致，但间距拉开 */
    font-size: 12px; 
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 0.5rem;
  }

  /* 左侧内容：匹配 Body 风格 */
  .info-item dd {
    margin: 0;
    font-size: 14px; /* 侧边栏字稍小一点，保持层级 */
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
  }

  /* --- 右侧主要内容 --- */
  .main-content {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
    
    /* 【关键修改】右侧背景改为纯黑 */
    background-color: #000000; 
    padding: 3rem;             
    
    border-radius: 0;        
    border: 1px solid rgba(255, 255, 255, 0.05); 
  }

  /* Bio 段落排版 - 【严格匹配 .notes-body】 */
  .bio-text p {
    /* 【匹配】字体大小 16px */
    font-size: 16px; 
    
    /* 【匹配】行高 1.8 */
    line-height: 1.8; 
    
    color: rgba(255, 255, 255, 0.85); /* 模拟 text-muted */
    margin-bottom: 1.5rem;
    margin-top: 0; 
    max-width: 100%; 
  }
  
  .bio-text strong {
    color: #fff;
    font-weight: 600;
  }

  /* 标题样式 - 【严格匹配 .notes-title】 */
  .section-title {
    /* 【匹配】字体大小 24px */
    font-size: 24px; 
    
    /* 【匹配】字重 400 */
    font-weight: 400; 
    
    margin-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.5);
    padding-bottom: 0.8rem;
    color: #fff;
    margin-top: 0rem; 
  }

  /* 经历列表内部文字 - 同样匹配 Body */
  .experience-block {
    margin-bottom: 2.5rem;
  }

  .exp-header {
    margin-bottom: 0.8rem;
  }
  
  /* 职位小字 */
  .exp-role {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 0.3rem;
    letter-spacing: 0.02em;
  }

  .exp-list {
    padding-left: 1.2rem;
    
    /* 【匹配】列表也使用 16px 和 1.8 行高 */
    font-size: 16px;
    line-height: 1.8;
    
    color: rgba(255, 255, 255, 0.85);
  }
  
  .exp-list li {
    margin-bottom: 0.6rem;
  }

  /* 链接样式 */
  a.download-link {
    color: #fff;
    text-decoration: underline;
    text-underline-offset: 4px;
    font-weight: bold;
    transition: opacity 0.2s;
  }
  a.download-link:hover {
    opacity: 0.7;
  }

  /* 响应式设计 */
  @media (max-width: 900px) {
    .about-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .sidebar {
      position: static;
      flex-direction: row;
      flex-wrap: wrap;
      align-items: flex-end;
    }

    .portrait {
      max-width: 180px; 
    }
    
    .page-layout-override {
      padding: 0 1rem;
    }

    .main-content {
      padding: 1.5rem; 
    }
  }
</style>

